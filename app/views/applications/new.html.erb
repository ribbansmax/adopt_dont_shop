<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= form_tag create_app_path, method: :post do %>
  <h2>Application:<br>____________</h2>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :street_address %>
  <%= text_field_tag :street_address %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city%><br>
  <%= label_tag :state %>
  <%= text_field_tag :state%><br>
  <%= label_tag :zip %>
  <%= text_field_tag :zip%><br>
  <%= submit_tag 'create' %>
<% end %>